    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}